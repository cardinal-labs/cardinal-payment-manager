{
  "name": "@cardinal/payment-manager",
  "version": "2.1.0",
  "description": "Cardinal payment manager SDK",
  "keywords": [
    "solana",
    "anchor",
    "cardinal",
    "payment-manager"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "repository": "git@github.com:cardinal-labs/cardinal-payemnt-manager.git",
  "author": "The Cardinal Team <team@cardinal.so>",
  "bugs": {
    "url": "https://github.com/cardinal-labs/cardinal-payment-manager/issues",
    "email": "info@cardinal.so"
  },
  "homepage": "https://cardinal.so",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "rm -fr dist/ && tsc -P tsconfig.cjs.json && tsc -P tsconfig.esm.json",
    "clean": "rm -fr dist/",
    "idl:generate": "./generate-idls.sh",
    "typecheck": "tsc",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --fix",
    "lint:ci": "eslint . --max-warnings=0",
    "docs:generate": "typedoc --excludePrivate --includeVersion --out site/ sdk/index.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "sdk/"
  ],
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{js,json,jsx,html,css,md}": "prettier --write"
  },
  "dependencies": {
    "@cardinal/common": "^4.0.1",
    "@metaplex-foundation/mpl-token-metadata": "^1.2.5",
    "@project-serum/anchor": "^0.25.0",
    "@saberhq/anchor-contrib": "^1.14.9",
    "@saberhq/solana-contrib": "^1.14.9",
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.66.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@saberhq/eslint-config-react": "^2.1.0",
    "@saberhq/tsconfig": "^2.1.0",
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.3",
    "@saberhq/chai-solana": "^1.14.9",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.3",
    "bn.js": "^5.2.0",
    "eslint": "^8.26.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "jsbi": "^4.3.0",
    "mocha": "^10.1.0",
    "ts-mocha": "^10.0.0",
    "typedoc": "^0.23.17",
    "typescript": "^4.8.4"
  },
  "packageManager": "yarn@3.1.1"
}
